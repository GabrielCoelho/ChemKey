<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title || 'ChemKey - Your local PCA Manager' %></title>
    <meta
      name="description"
      content="<%= description || 'A private password manager that keeps your digital keys secure and local.' %>"
    />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css"
    />

    <!-- Custom CSS -->
    <link href="/src/css/fonts.css" rel="stylesheet" />
    <% if (typeof customCSS !== 'undefined' && customCSS) { %>
      <% customCSS.forEach(css => { %>
        <link href="<%= css %>" rel="stylesheet" />
      <% }) %>
    <% } %>
  </head>
  <body class="<%= typeof bodyClass !== 'undefined' ? bodyClass : '' %>">

    <!-- Header/Navigation -->
    <% if (typeof showNavbar === 'undefined' || showNavbar) { %>
      <%- include('../partials/navbar') %>
    <% } %>

    <!-- Main Content -->
    <main role="main">
      <%- body %>
    </main>

    <!-- Footer -->
    <% if (typeof showFooter === 'undefined' || showFooter) { %>
      <%- include('../partials/footer') %>
    <% } %>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <!-- Custom JavaScript -->
    <% if (typeof customJS !== 'undefined' && customJS) { %>
      <% customJS.forEach(js => { %>
        <script src="<%= js %>"></script>
      <% }) %>
    <% } %>

    <!-- Toast Container for notifications -->
    <div id="toast-container" class="position-fixed bottom-0 end-0 p-3"></div>
  </body>
</html>
