    <script>
      // ðŸ”§ LOGOUT FUNCIONAL - Script inline para garantir funcionamento
      document.addEventListener('DOMContentLoaded', function() {
        // Logout functionality - ID especÃ­fico para evitar conflitos
        const logoutBtn = document.getElementById('app-logout-btn');
        if (logoutBtn) {
          logoutBtn.addEventListener('click', async function(e) {
            e.preventDefault();

            // Show loading state
            const originalText = this.innerHTML;
            this.innerHTML = '<i class="fa fa-spinner fa-spin me-2"></i> Logging out...';
            this.disabled = true;

            try {
              const response = await fetch('/auth/logout', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                },
                credentials: 'include'
              });

              const result = await response.json();

              if (result.success) {
                showToast('Logout realizado com sucesso!');
                setTimeout(() => {
                  window.location.href = result.redirectUrl || '/';
                }, 1000);
              } else {
                throw new Error(result.error || 'Erro no logout');
              }
            } catch (error) {
              console.error('Erro no logout:', error);
              showToast('Erro ao fazer logout: ' + error.message, 'error');

              // Reset button state
              this.innerHTML = originalText;
              this.disabled = false;
            }
          });
        }

        // ðŸ’Š PASSWORD HEALTH INITIALIZATION
        initializePasswordHealth();

        // Section navigation
        const navLinks = document.querySelectorAll('[data-section]');
        const sections = document.querySelectorAll('.content-section');

        navLinks.forEach(link => {
          link.addEventListener('click', function(e) {
            e.preventDefault();

            // Update active nav
            navLinks.forEach(l => l.classList.remove('active'));
            this.classList.add('active');

            // Show corresponding section
            const targetSection = this.dataset.section;
            sections.forEach(section => {
              if (section.id === `${targetSection}-section`) {
                section.classList.remove('d-none');

                // Load health data when health section is shown
                if (targetSection === 'health') {
                  loadPasswordHealth();
                }
              } else {
                section.classList.add('d-none');
              }
            });
          });
        });

        // Refresh health analysis
        const refreshHealthBtn = document.getElementById('refresh-health');
        if (refreshHealthBtn) {
          refreshHealthBtn.addEventListener('click', loadPasswordHealth);
        }
      });

      // ðŸ’Š PASSWORD HEALTH FUNCTIONS
      function initializePasswordHealth() {
        // Initialize health section with empty state
        updateHealthDisplay({
          totalPasswords: 0,
          strongPasswords: 0,
          weakPasswords: 0,
          duplicatePasswords: 0,
          oldPasswords: 0,
          overallScore: 100,
          recommendations: ['Loading...']
        });
      }

      async function loadPasswordHealth() {
        const healthLoading = document.getElementById('health-loading');
        const healthDashboard = document.getElementById('health-dashboard');

        // Show loading state
        healthLoading.classList.remove('d-none');
        healthDashboard.style.opacity = '0.5';

        try {
          const response = await fetch('/passwords/health', {
            method: 'GET',
            credentials: 'include'
          });

          if (!response.ok) {
            throw new Error(`HTTP ${response.status}`);
          }

          const result = await response.json();

          if (result.success) {
            updateHealthDisplay(result.health);
            await loadHealthDetails();
          } else {
            throw new Error(result.error || 'Erro ao carregar anÃ¡lise');
          }

        } catch (error) {
          console.error('Erro ao carregar health:', error);
          showToast('Erro ao carregar anÃ¡lise de saÃºde: ' + error.message, 'error');
        } finally {
          healthLoading.classList.add('d-none');
          healthDashboard.style.opacity = '1';
        }
      }

      function updateHealthDisplay(health) {
        // Update overall score
        const scoreDisplay = document.getElementById('overall-score-display');
        const scoreCircle = document.getElementById('score-circle');
        const scoreDescription = document.getElementById('score-description');

        scoreDisplay.textContent = health.overallScore;

        // Update score circle color based on score
        scoreCircle.className = 'score-circle mx-auto mb-3 mb-md-0';
        if (health.overallScore >= 80) {
          scoreCircle.classList.add('excellent');
          scoreDescription.textContent = 'Excellent! Your passwords are very secure.';
        } else if (health.overallScore >= 60) {
          scoreCircle.classList.add('good');
          scoreDescription.textContent = 'Good security level with room for improvement.';
        } else if (health.overallScore >= 40) {
          scoreCircle.classList.add('fair');
          scoreDescription.textContent = 'Fair security. Several improvements needed.';
        } else {
          scoreCircle.classList.add('poor');
          scoreDescription.textContent = 'Poor security. Immediate action required.';
        }

        // Update metrics
        document.getElementById('health-weak-count').textContent = health.weakPasswords;
        document.getElementById('health-duplicate-count').textContent = health.duplicatePasswords;
        document.getElementById('health-old-count').textContent = health.oldPasswords;

        // Update main stats
        document.getElementById('total-passwords').textContent = health.totalPasswords;
        document.getElementById('strong-passwords').textContent = health.strongPasswords;
        document.getElementById('weak-passwords').textContent = health.weakPasswords;
        document.getElementById('security-score').textContent = health.overallScore;

        // Update recommendations
        const recommendationsList = document.getElementById('recommendations-list');
        recommendationsList.innerHTML = health.recommendations.map(rec =>
          `<div class="alert alert-info alert-sm mb-2">
            <i class="fa fa-lightbulb-o me-2"></i>${rec}
          </div>`
        ).join('');
      }

      async function loadHealthDetails() {
        // Load weak passwords
        try {
          const weakResponse = await fetch('/passwords/health/weak', { credentials: 'include' });
          const weakResult = await weakResponse.json();
          if (weakResult.success) {
            displayWeakPasswords(weakResult.weakPasswords);
          }
        } catch (error) {
          console.error('Erro ao carregar senhas fracas:', error);
        }

        // Load duplicates
        try {
          const dupResponse = await fetch('/passwords/health/duplicates', { credentials: 'include' });
          const dupResult = await dupResponse.json();
          if (dupResult.success) {
            displayDuplicatePasswords(dupResult.duplicates);
          }
        } catch (error) {
          console.error('Erro ao carregar duplicatas:', error);
        }

        // Load old passwords
        try {
          const oldResponse = await fetch('/passwords/health/old', { credentials: 'include' });
          const oldResult = await oldResponse.json();
          if (oldResult.success) {
            displayOldPasswords(oldResult.oldPasswords);
          }
        } catch (error) {
          console.error('Erro ao carregar senhas antigas:', error);
        }
      }

      function displayWeakPasswords(weakPasswords) {
        const container = document.getElementById('weak-passwords-list');

        if (weakPasswords.length === 0) {
          container.innerHTML = '<div class="alert alert-success"><i class="fa fa-check me-2"></i>Excellent! No duplicate passwords found.</div>';
        return;
      }

      container.innerHTML = duplicates.map(dup => `
        <div class="health-item duplicate">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <strong>Password used ${dup.count} times</strong>
              <br>
              <small class="text-muted">
                ${dup.accounts.map(acc => escapeHtml(acc.website)).join(', ')}
              </small>
            </div>
            <div class="text-end">
              <span class="badge bg-warning text-dark">${dup.count} accounts</span>
            </div>
          </div>
        </div>
      `).join('');
    }

    function displayOldPasswords(oldPasswords) {
      const container = document.getElementById('old-passwords-list');

      if (oldPasswords.length === 0) {
        container.innerHTML = '<div class="alert alert-success"><i class="fa fa-check me-2"></i>All passwords are recently updated!</div>';
        return;
      }

      container.innerHTML = oldPasswords.map(pwd => `
        <div class="health-item old">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <strong>${escapeHtml(pwd.website)}</strong>
              <br>
              <small class="text-muted">${escapeHtml(pwd.username)}</small>
            </div>
            <div class="text-end">
              <span class="badge bg-info">${pwd.daysOld} days old</span>
            </div>
          </div>
        </div>
      `).join('');
    }

    // Helper function (if not already defined)
    function escapeHtml(text) {
      const map = {
        '&': '&amp;',
        '<': '&lt;',
        '>': '&gt;',
        '"': '&quot;',
        "'": '&#039;'
      };
      return text.replace(/[&<>"']/g, function(m) { return map[m]; });
    }

    // Helper function for toast notifications (if not already defined)
    function showToast(message, type = "success") {
      let toastContainer = document.getElementById("toast-container");
      if (!toastContainer) {
        toastContainer = document.createElement("div");
        toastContainer.id = "toast-container";
        toastContainer.className = "position-fixed bottom-0 end-0 p-3";
        document.body.appendChild(toastContainer);
      }

      const toastId = `toast-${Date.now()}`;
      const toastClass = type === "error" ? "text-bg-danger" :
                        type === "info" ? "text-bg-info" : "text-bg-success";

      const toastHtml = `
        <div id="${toastId}" class="toast ${toastClass}" role="alert" aria-live="assertive" aria-atomic="true">
          <div class="toast-header">
            <strong class="me-auto">ChemKey</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
          <div class="toast-body">
            ${message}
          </div>
        </div>
      `;

      toastContainer.insertAdjacentHTML("beforeend", toastHtml);

      const toastElement = document.getElementById(toastId);
      const bsToast = new bootstrap.Toast(toastElement, {
        autohide: true,
        delay: type === "error" ? 5000 : 3000,
      });
      bsToast.show();

      toastElement.addEventListener("hidden.bs.toast", function () {
        toastElement.remove();
      });
    }
    </script>
