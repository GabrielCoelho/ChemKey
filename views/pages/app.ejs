<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ChemKey - Your Password Manager</title>
    <meta
      name="description"
      content="A private password manager that keeps your digital keys secure and local."
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css"
    />
    <link href="/src/css/fonts.css" rel="stylesheet" />
    <link href="/src/css/app.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Loading Overlay -->
    <div id="app-loading" class="d-none">
      <div class="loading-overlay">
        <div class="loading-content">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
          <p class="mt-3">Loading your secure vault...</p>
        </div>
      </div>
    </div>

    <header role="banner">
      <nav
        class="navbar navbar-expand-md bg-dark navbar-dark"
        role="navigation"
      >
        <div class="container-fluid">
          <a class="navbar-brand fs-4" href="/"> ChemKey </a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div
            class="collapse navbar-collapse justify-content-between"
            id="navbarNav"
          >
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" href="#" data-section="passwords">
                  <i class="fa fa-key me-1"></i> Passwords
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#" data-section="generator">
                  <i class="fa fa-random me-1"></i> Generator
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#" data-section="health">
                  <i class="fa fa-heartbeat me-1"></i> Password Health
                </a>
              </li>
            </ul>
            <div class="d-flex align-items-center">
              <span class="navbar-text me-3" id="user-display">
                <i class="fa fa-user me-1"></i>
                <span id="username-display">
                  <% if (locals.user) { %>
                    Welcome, <%= user.name %>
                  <% } else { %>
                    Loading...
                  <% } %>
                </span>
              </span>
              <div class="btn-group">
                <button
                  type="button"
                  class="btn btn-outline-light btn-sm dropdown-toggle"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  <i class="fa fa-cog"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                  <li>
                    <a class="dropdown-item" href="#" id="change-password-link">
                      <i class="fa fa-lock me-2"></i> Change Password
                    </a>
                  </li>
                  <li>
                    <a class="dropdown-item" href="#" id="export-data-link">
                      <i class="fa fa-download me-2"></i> Export Data
                    </a>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                  <li>
                    <a class="dropdown-item text-danger" href="#" id="logout-btn">
                      <i class="fa fa-sign-out me-2"></i> Logout
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <main role="main" class="container-fluid">
      <!-- Statistics Row -->
      <div class="row mb-4">
        <div class="col-12">
          <div class="row g-3" id="stats-row">
            <div class="col-md-3">
              <div class="card bg-primary text-white">
                <div class="card-body">
                  <div class="d-flex justify-content-between">
                    <div>
                      <h6 class="card-title">Total Passwords</h6>
                      <h3 class="mb-0" id="total-passwords">-</h3>
                    </div>
                    <div class="align-self-center">
                      <i class="fa fa-key fa-2x opacity-75"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card bg-success text-white">
                <div class="card-body">
                  <div class="d-flex justify-content-between">
                    <div>
                      <h6 class="card-title">Strong Passwords</h6>
                      <h3 class="mb-0" id="strong-passwords">-</h3>
                    </div>
                    <div class="align-self-center">
                      <i class="fa fa-shield fa-2x opacity-75"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card bg-warning text-white">
                <div class="card-body">
                  <div class="d-flex justify-content-between">
                    <div>
                      <h6 class="card-title">Weak Passwords</h6>
                      <h3 class="mb-0" id="weak-passwords">-</h3>
                    </div>
                    <div class="align-self-center">
                      <i class="fa fa-exclamation-triangle fa-2x opacity-75"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card bg-info text-white">
                <div class="card-body">
                  <div class="d-flex justify-content-between">
                    <div>
                      <h6 class="card-title">Favorites</h6>
                      <h3 class="mb-0" id="favorite-passwords">-</h3>
                    </div>
                    <div class="align-self-center">
                      <i class="fa fa-star fa-2x opacity-75"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <!-- Main Content Area -->
        <div class="col-md-12 ms-sm-auto px-md-4">
          <!-- Passwords Section -->
          <div id="passwords-section" class="content-section">
            <div
              class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
            >
              <h1 class="h2 oganesson">
                <i class="fa fa-key me-2"></i>Password Vault
              </h1>
              <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group me-2">
                  <button
                    type="button"
                    class="btn btn-outline-secondary btn-sm"
                    id="refresh-passwords"
                    title="Refresh passwords"
                  >
                    <i class="fa fa-refresh"></i>
                  </button>
                  <button
                    type="button"
                    class="btn btn-outline-secondary btn-sm"
                    data-bs-toggle="modal"
                    data-bs-target="#passwordGeneratorModal"
                    title="Generate password"
                  >
                    <i class="fa fa-random"></i>
                  </button>
                </div>
                <button
                  type="button"
                  class="btn btn-primary"
                  data-bs-toggle="modal"
                  data-bs-target="#addPasswordModal"
                >
                  <i class="fa fa-plus"></i> Add Password
                </button>
              </div>
            </div>

            <!-- Search and Filter -->
            <div class="row mb-4">
              <div class="col-md-6">
                <div class="input-group">
                  <span class="input-group-text"
                    ><i class="fa fa-search"></i
                  ></span>
                  <input
                    type="text"
                    class="form-control"
                    id="search-passwords"
                    placeholder="Search passwords..."
                  />
                  <button class="btn btn-outline-secondary" type="button" id="clear-search">
                    <i class="fa fa-times"></i>
                  </button>
                </div>
              </div>
              <div class="col-md-3">
                <select class="form-select" id="filter-category">
                  <option selected value="">All Categories</option>
                  <option value="social">Social Media</option>
                  <option value="work">Work</option>
                  <option value="financial">Financial</option>
                  <option value="email">Email</option>
                  <option value="entertainment">Entertainment</option>
                  <option value="other">Other</option>
                </select>
              </div>
              <div class="col-md-3">
                <select class="form-select" id="sort-by">
                  <option selected value="name">Sort by Name</option>
                  <option value="date">Sort by Date Added</option>
                  <option value="strength">Sort by Strength</option>
                  <option value="category">Sort by Category</option>
                </select>
              </div>
            </div>

            <!-- Password List Loading State -->
            <div id="passwords-loading" class="text-center py-5 d-none">
              <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading passwords...</span>
              </div>
              <p class="mt-3 text-muted">Decrypting your passwords...</p>
            </div>

            <!-- Password List -->
            <div class="table-responsive">
              <table class="table table-hover" id="passwords-table">
                <thead class="table-dark">
                  <tr>
                    <th scope="col" width="5%">
                      <i class="fa fa-star-o" title="Favorites"></i>
                    </th>
                    <th scope="col" width="25%">
                      <i class="fa fa-globe me-1"></i>Website
                    </th>
                    <th scope="col" width="25%">
                      <i class="fa fa-user me-1"></i>Username/Login
                    </th>
                    <th scope="col" width="25%">
                      <i class="fa fa-lock me-1"></i>Password
                    </th>
                    <th scope="col" width="10%">
                      <i class="fa fa-shield me-1"></i>Strength
                    </th>
                    <th scope="col" width="10%">
                      <i class="fa fa-cog me-1"></i>Actions
                    </th>
                  </tr>
                </thead>
                <tbody id="passwords-list">
                  <!-- Dynamic content loaded here -->
                </tbody>
              </table>
            </div>

            <!-- Empty State for No Passwords -->
            <div id="empty-state" class="text-center py-5 d-none">
              <div class="empty-state-content">
                <i class="fa fa-key fa-5x text-muted mb-4"></i>
                <h3>Your vault is empty</h3>
                <p class="text-muted mb-4">
                  Start securing your digital life by adding your first password.
                </p>
                <button
                  class="btn btn-primary btn-lg"
                  data-bs-toggle="modal"
                  data-bs-target="#addPasswordModal"
                >
                  <i class="fa fa-plus me-2"></i> Add Your First Password
                </button>
                <div class="mt-4">
                  <button
                    class="btn btn-outline-secondary me-2"
                    data-bs-toggle="modal"
                    data-bs-target="#passwordGeneratorModal"
                  >
                    <i class="fa fa-random me-1"></i> Generate Secure Password
                  </button>
                  <a href="#" class="btn btn-outline-info" id="import-data-link">
                    <i class="fa fa-upload me-1"></i> Import from Other Manager
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Generator Section (Hidden by default) -->
          <div id="generator-section" class="content-section d-none">
            <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
              <h1 class="h2 oganesson">
                <i class="fa fa-random me-2"></i>Password Generator
              </h1>
            </div>

            <div class="row justify-content-center">
              <div class="col-lg-8">
                <div class="card">
                  <div class="card-body p-4">
                    <!-- Generator content will be embedded here -->
                    <div class="mb-4">
                      <label for="standalone-generated-password" class="form-label h5">
                        Generated Password
                      </label>
                      <div class="input-group input-group-lg">
                        <input
                          type="text"
                          class="form-control font-monospace"
                          id="standalone-generated-password"
                          readonly
                          placeholder="Click generate to create a password..."
                        />
                        <button
                          class="btn btn-outline-secondary"
                          type="button"
                          id="copy-standalone-password"
                        >
                          <i class="fa fa-copy"></i>
                        </button>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-md-6">
                        <div class="mb-3">
                          <label for="standalone-password-length" class="form-label">
                            Length: <span id="standalone-length-value">16</span>
                          </label>
                          <input
                            type="range"
                            class="form-range"
                            min="6"
                            max="64"
                            value="16"
                            id="standalone-password-length"
                          />
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="mb-3">
                          <label class="form-label">Character Types</label>
                          <div class="form-check">
                            <input
                              class="form-check-input"
                              type="checkbox"
                              id="standalone-include-uppercase"
                              checked
                            />
                            <label class="form-check-label" for="standalone-include-uppercase">
                              Uppercase Letters (A-Z)
                            </label>
                          </div>
                          <div class="form-check">
                            <input
                              class="form-check-input"
                              type="checkbox"
                              id="standalone-include-lowercase"
                              checked
                            />
                            <label class="form-check-label" for="standalone-include-lowercase">
                              Lowercase Letters (a-z)
                            </label>
                          </div>
                          <div class="form-check">
                            <input
                              class="form-check-input"
                              type="checkbox"
                              id="standalone-include-numbers"
                              checked
                            />
                            <label class="form-check-label" for="standalone-include-numbers">
                              Numbers (0-9)
                            </label>
                          </div>
                          <div class="form-check">
                            <input
                              class="form-check-input"
                              type="checkbox"
                              id="standalone-include-symbols"
                              checked
                            />
                            <label class="form-check-label" for="standalone-include-symbols">
                              Symbols (!@#$%^&*)
                            </label>
                          </div>
                        </div>
                      </div>
                    </div>

                    <div class="d-grid gap-2">
                      <button
                        type="button"
                        class="btn btn-primary btn-lg"
                        id="generate-standalone-password"
                      >
                        <i class="fa fa-random me-2"></i> Generate New Password
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Health Section (Hidden by default) -->
          <div id="health-section" class="content-section d-none">
            <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
              <h1 class="h2 oganesson">
                <i class="fa fa-heartbeat me-2"></i>Password Health
              </h1>
            </div>

            <div class="row">
              <div class="col-12">
                <div class="alert alert-info">
                  <i class="fa fa-info-circle me-2"></i>
                  <strong>Coming Soon!</strong> Password health analysis will help you identify weak, duplicate, and old passwords that need attention.
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- Add Password Modal -->
    <div
      class="modal fade"
      id="addPasswordModal"
      tabindex="-1"
      aria-labelledby="addPasswordModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addPasswordModalLabel">
              <i class="fa fa-plus me-2"></i>Add New Password
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="add-password-form">
              <div class="row g-3">
                <div class="col-md-6">
                  <label for="website" class="form-label">
                    <i class="fa fa-globe me-1"></i>Website URL *
                  </label>
                  <input
                    type="url"
                    class="form-control"
                    id="website"
                    placeholder="https://example.com"
                    required
                  />
                  <div class="form-text">Include https:// for best results</div>
                </div>
                <div class="col-md-6">
                  <label for="category" class="form-label">
                    <i class="fa fa-tag me-1"></i>Category
                  </label>
                  <select class="form-select" id="category">
                    <option value="social">Social Media</option>
                    <option value="work">Work</option>
                    <option value="financial">Financial</option>
                    <option value="email">Email</option>
                    <option value="entertainment">Entertainment</option>
                    <option value="other" selected>Other</option>
                  </select>
                </div>
                <div class="col-12">
                  <label for="username" class="form-label">
                    <i class="fa fa-user me-1"></i>Username/Email *
                  </label>
                  <input
                    type="text"
                    class="form-control"
                    id="username"
                    placeholder="username or email@example.com"
                    required
                  />
                </div>
                <div class="col-12">
                  <label for="password" class="form-label">
                    <i class="fa fa-lock me-1"></i>Password *
                  </label>
                  <div class="input-group">
                    <input
                      type="password"
                      class="form-control"
                      id="password"
                      required
                      placeholder="Enter a strong password"
                    />
                    <button
                      class="btn btn-outline-secondary toggle-password"
                      type="button"
                      title="Show/Hide Password"
                    >
                      <i class="fa fa-eye"></i>
                    </button>
                  </div>
                  <div id="password-strength-indicator" class="mt-2 d-none">
                    <div class="d-flex justify-content-between small">
                      <span>Password Strength:</span>
                      <span id="password-strength-text">-</span>
                    </div>
                    <div class="progress" style="height: 4px;">
                      <div id="password-strength-bar" class="progress-bar" style="width: 0%"></div>
                    </div>
                  </div>
                </div>
                <div class="col-12">
                  <div class="d-grid gap-2">
                    <button
                      type="button"
                      class="btn btn-outline-secondary"
                      id="generate-password"
                    >
                      <i class="fa fa-random me-2"></i> Generate Strong Password
                    </button>
                  </div>
                </div>
                <div class="col-12">
                  <label for="notes" class="form-label">
                    <i class="fa fa-sticky-note me-1"></i>Notes (Optional)
                  </label>
                  <textarea
                    class="form-control"
                    id="notes"
                    rows="3"
                    placeholder="Security questions, recovery codes, etc."
                  ></textarea>
                </div>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              <i class="fa fa-times me-1"></i> Cancel
            </button>
            <button type="button" class="btn btn-primary" id="save-password">
              <span class="btn-content">
                <i class="fa fa-save me-1"></i> Save Password
              </span>
              <span class="btn-loading d-none">
                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                Saving...
              </span>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Password Generator Modal -->
    <div
      class="modal fade"
      id="passwordGeneratorModal"
      tabindex="-1"
      aria-labelledby="passwordGeneratorModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="passwordGeneratorModalLabel">
              <i class="fa fa-random me-2"></i>Password Generator
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label for="generated-password" class="form-label"
                >Generated Password</label
              >
              <div class="input-group">
                <input
                  type="text"
                  class="form-control font-monospace"
                  id="generated-password"
                  readonly
                />
                <button
                  class="btn btn-outline-secondary copy-generated"
                  type="button"
                  title="Copy to clipboard"
                >
                  <i class="fa fa-copy"></i>
                </button>
              </div>
            </div>
            <div class="mb-3">
              <label for="password-length" class="form-label"
                >Length: <span id="length-value">12</span></label
              >
              <input
                type="range"
                class="form-range"
                min="6"
                max="32"
                value="12"
                id="password-length"
              />
            </div>
            <div class="mb-3">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="include-uppercase"
                  checked
                />
                <label class="form-check-label" for="include-uppercase">
                  Include Uppercase Letters (A-Z)
                </label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="include-lowercase"
                  checked
                />
                <label class="form-check-label" for="include-lowercase">
                  Include Lowercase Letters (a-z)
                </label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="include-numbers"
                  checked
                />
                <label class="form-check-label" for="include-numbers">
                  Include Numbers (0-9)
                </label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="include-symbols"
                  checked
                />
                <label class="form-check-label" for="include-symbols">
                  Include Symbols (!@#$%^&*)
                </label>
              </div>
            </div>
            <div class="d-grid">
              <button
                type="button"
                class="btn btn-primary"
                id="generate-new-password"
              >
                <i class="fa fa-refresh me-1"></i> Generate New Password
              </button>
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button
              type="button"
              class="btn btn-primary"
              id="use-generated-password"
            >
              <i class="fa fa-check me-1"></i> Use This Password
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Toast Container -->
    <div id="toast-container" class="position-fixed bottom-0 end-0 p-3"></div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="/public/js/app.js"></script>

    <style>
      /* Loading Overlay */
      .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.9);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
      }

      .loading-content {
        text-align: center;
      }

      /* Section Management */
      .content-section {
        min-height: 400px;
      }

      /* Empty State */
      .empty-state-content {
        max-width: 500px;
        margin: 0 auto;
      }

      /* Password Strength Indicator */
      .progress {
        height: 4px;
      }

      /* Stats Cards */
      .card .opacity-75 {
        opacity: 0.75;
      }

      /* Responsive adjustments */
      @media (max-width: 768px) {
        .container-fluid {
          padding: 0.5rem;
        }

        .table-responsive {
          font-size: 0.875rem;
        }

        .btn-toolbar .btn-group {
          margin-bottom: 0.5rem;
        }
      }

      /* Password field styling */
      .font-monospace {
        font-family: 'Courier New', Courier, monospace;
        letter-spacing: 1px;
      }

      /* Navigation active states */
      .nav-link.active {
        color: #0d6efd !important;
        font-weight: 500;
      }

      /* Loading states */
      .btn-loading {
        pointer-events: none;
      }
    </style>

    <script>
      // Section navigation
      document.addEventListener('DOMContentLoaded', function() {
        // Handle section navigation
        const navLinks = document.querySelectorAll('[data-section]');
        const sections = document.querySelectorAll('.content-section');

        navLinks.forEach(link => {
          link.addEventListener('click', function(e) {
            e.preventDefault();

            // Update active nav
            navLinks.forEach(l => l.classList.remove('active'));
            this.classList.add('active');

            // Show corresponding section
            const targetSection = this.dataset.section;
            sections.forEach(section => {
              if (section.id === `${targetSection}-section`) {
                section.classList.remove('d-none');
              } else {
                section.classList.add('d-none');
              }
            });
          });
        });

        // Clear search functionality
        document.getElementById('clear-search')?.addEventListener('click', function() {
          document.getElementById('search-passwords').value = '';
          // Trigger search to show all passwords
          const event = new Event('input');
          document.getElementById('search-passwords').dispatchEvent(event);
        });

        // Refresh passwords functionality
        document.getElementById('refresh-passwords')?.addEventListener('click', async function() {
          const btn = this;
          const originalHtml = btn.innerHTML;

          btn.disabled = true;
          btn.innerHTML = '<i class="fa fa-spin fa-refresh"></i>';

          try {
            await initializePasswordList();
            showToast('Passwords refreshed successfully!');
          } catch (error) {
            showToast('Error refreshing passwords: ' + error.message, 'error');
          } finally {
            btn.disabled = false;
            btn.innerHTML = originalHtml;
          }
        });

        // Standalone password generator
        const standaloneElements = {
          generateBtn: document.getElementById('generate-standalone-password'),
          passwordInput: document.getElementById('standalone-generated-password'),
          copyBtn: document.getElementById('copy-standalone-password'),
          lengthSlider: document.getElementById('standalone-password-length'),
          lengthValue: document.getElementById('standalone-length-value'),
          includeUppercase: document.getElementById('standalone-include-uppercase'),
          includeLowercase: document.getElementById('standalone-include-lowercase'),
          includeNumbers: document.getElementById('standalone-include-numbers'),
          includeSymbols: document.getElementById('standalone-include-symbols')
        };

        // Standalone generator events
        if (standaloneElements.generateBtn) {
          standaloneElements.generateBtn.addEventListener('click', generateStandalonePassword);

          standaloneElements.lengthSlider.addEventListener('input', function() {
            standaloneElements.lengthValue.textContent = this.value;
          });

          standaloneElements.copyBtn.addEventListener('click', function() {
            copyToClipboard(standaloneElements.passwordInput.value);
            showToast('Password copied to clipboard!');
          });

          // Generate initial password
          generateStandalonePassword();
        }

        // Password strength indicator in add modal
        const passwordInput = document.getElementById('password');
        const strengthIndicator = document.getElementById('password-strength-indicator');
        const strengthBar = document.getElementById('password-strength-bar');
        const strengthText = document.getElementById('password-strength-text');

        if (passwordInput) {
          passwordInput.addEventListener('input', function() {
            const password = this.value;

            if (password.length === 0) {
              strengthIndicator.classList.add('d-none');
              return;
            }

            strengthIndicator.classList.remove('d-none');

            const strength = calculatePasswordStrength(password);
            const percentage = (strength / 5) * 100;

            strengthBar.style.width = percentage + '%';
            strengthBar.className = 'progress-bar';

            if (strength >= 4) {
              strengthBar.classList.add('bg-success');
              strengthText.textContent = 'Strong';
            } else if (strength >= 2) {
              strengthBar.classList.add('bg-warning');
              strengthText.textContent = 'Medium';
            } else {
              strengthBar.classList.add('bg-danger');
              strengthText.textContent = 'Weak';
            }
          });
        }

        async function generateStandalonePassword() {
          const options = {
            length: parseInt(standaloneElements.lengthSlider.value),
            includeUppercase: standaloneElements.includeUppercase.checked,
            includeLowercase: standaloneElements.includeLowercase.checked,
            includeNumbers: standaloneElements.includeNumbers.checked,
            includeSymbols: standaloneElements.includeSymbols.checked
          };

          try {
            const result = await generatePasswordFromAPI(options);
            if (result && result.success) {
              standaloneElements.passwordInput.value = result.password;
            }
          } catch (error) {
            // Fallback to local generation
            generatePasswordLocal(options);
            standaloneElements.passwordInput.value = document.getElementById('generated-password').value;
          }
        }

        // Update statistics
        function updateStatistics(passwords) {
          const total = passwords.length;
          const strong = passwords.filter(p => p.strength >= 4).length;
          const weak = passwords.filter(p => p.strength < 2).length;
          const favorites = passwords.filter(p => p.favorite).length;

          document.getElementById('total-passwords').textContent = total;
          document.getElementById('strong-passwords').textContent = strong;
          document.getElementById('weak-passwords').textContent = weak;
          document.getElementById('favorite-passwords').textContent = favorites;
        }

        // Override the original renderPasswordsList to include stats update
        const originalRenderPasswordsList = window.renderPasswordsList;
        window.renderPasswordsList = function(passwords) {
          originalRenderPasswordsList(passwords);
          updateStatistics(passwords);
        };

        // Change password functionality
        document.getElementById('change-password-link')?.addEventListener('click', function(e) {
          e.preventDefault();
          showToast('Change password functionality coming soon!', 'info');
        });

        // Export data functionality
        document.getElementById('export-data-link')?.addEventListener('click', function(e) {
          e.preventDefault();
          showToast('Export functionality coming soon!', 'info');
        });

        // Import data functionality
        document.getElementById('import-data-link')?.addEventListener('click', function(e) {
          e.preventDefault();
          showToast('Import functionality coming soon!', 'info');
        });
      });
    </script>
  </body>
</html>
